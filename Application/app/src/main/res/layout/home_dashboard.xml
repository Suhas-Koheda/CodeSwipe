<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Username Section -->
        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/username_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp" />

        <!-- Tech Stack Section -->
        <TextView
            android:id="@+id/tech_stack_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Stack:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tech_stack_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp" />

        <!-- Favorite Projects Section -->
        <TextView
            android:id="@+id/fav_projects_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Projects:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/fav_projects_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp" />

        <!-- Snippet Section -->
        <TextView
            android:id="@+id/snippet_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snippet:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/snippet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
